{
  "expo": {
    "name": "TWI Bible",
    "slug": "twi_bible",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appicons/adaptive-icon",
    "scheme": "twibible",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lescode.ios.twibible",
      "infoPlist": {
        "UIBackgroundModes": ["audio", "remote-notification", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/appicons/adaptive-icon.png",
        "monochromeImage": "./assets/appicons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.lescode.android.twibible",
      "enableProguardInReleaseBuilds": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/appicons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/appicons/splash-icon-dark.png",
            "backgroundColor": "#101222",
            "imageWidth": 200,
            "resizeMode": "contain"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "useLegacyPackaging": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
